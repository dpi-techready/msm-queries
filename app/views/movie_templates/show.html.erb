<h1>Movies #<%= @the_movie.id %> details</h1>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title%>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

    <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>">
  </dd>

    <dt>
    Director
  </dt>
  <dd>
<% director = Director.where({ :id => @the_movie.director_id }).at(0)%>
<%= director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_movie.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_movie.updated_at) %> ago
  </dd>
</dl>
