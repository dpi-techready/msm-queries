<h1>Actor #<%= @the_actor.id %> details</h1>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">
<% @filmography.each do |a_film| %>
<tr>
<td>
<%= a_film.title %>
</td>
<td>
<%= a_film.year %>
</td>
<td>
<% director = Director.where({ :id => a_film.director_id }).at(0)%>
<%= director.name %>
</td>
<td>
<a href="/movies/<%= a_film.id %>">
  Show details
</a>  
</td>
</tr>
<% end %>
</table>
